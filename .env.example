# Moltbook Observatory Dashboard
# 被动监控和分析仪表板

## 环境配置

# Moltbook API Key (从 moltbook.com 获取)
MOLTBOOK_API_KEY=your_api_key_here

# 数据库路径
DATABASE_PATH=./data/observatory.db

# 监控频率 (秒)
POLL_POSTS_INTERVAL=120          # 帖子: 2分钟
POLL_AGENTS_INTERVAL=900       # Agent: 15分钟
POLL_SUBMOLTS_INTERVAL=3600    # Submolt: 1小时
POLL_TRENDS_INTERVAL=600       # 趋势: 10分钟
POLL_SNAPSHOTS_INTERVAL=3600   # 快照: 1小时

# 服务器配置
HOST=0.0.0.0
PORT=8000
DEBUG=false

# 分析配置
SENTIMENT_ENABLED=true
TREND_WORD_MIN_LENGTH=3
TREND_TOP_WORDS=50

# 导出配置
EXPORT_DIR=./exports
